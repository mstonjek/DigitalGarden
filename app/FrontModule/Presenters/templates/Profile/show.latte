
{if $user->flower}
    {php
        $pronounce = "";
        switch($user->flower->gender){
        case App\Model\Entity\FlowerGenderEnum::MALE:
        $pronounce = "He's";
        break;
        case App\Model\Entity\FlowerGenderEnum::FEMALE:
        $pronounce = "She's";
        break;
        case App\Model\Entity\FlowerGenderEnum::OTHER:
        $pronounce = "It's";
        break;
        }
    }
{/if}
{block content}
    <div class="profile-container">

        <div class="return-link">
            <a n:href="{$backUrl}">üîô</a>
            <p class="date-of-join">Member since {$user->createdAt->format("M Y")}</p>
        </div>

        <div class="profile-header">

            <div class="profile-names">
                <h1>{$user->name}</h1>
                <p><a href="{$user->profileUrl}" style="text-decoration: none;">@{$user->username}</a></p>
            </div>
            <img src="{$user->avatarUrl}" alt="{$user->username}'s avatar" class="profile-avatar">
        </div>

        {if $user->flower}
                <div class="flower-info">
                    {if $user->flower->flowerName}
                        <p class="flower-name">The one who planted: <a class="flower-link" n:href="Garden:flower $user->flower->flowerId, App\Model\Entity\BackUrlEnum::PROFILE_SHOW->value, $user->username"><span class="flower-name-strong">{$user->flower->flowerName}</span> üå± <span class="flower-latin">({$user->flower->flowerLatinName})</span></a> </p>
                        <p class="flower-description">{$pronounce} from {$user->flower->country}, {$user->flower->height} cm tall and has {$user->flower->flowerEducation->value} education</p>

                        {if $user->flower->favouriteQuote}
                            <q class="flower-quote">{$user->flower->favouriteQuote} üå∏</q>
                        {/if}
                    {/if}
                </div>
        {/if}


        {if $user->bio}
            <div class="bio-div">
                <h2 class="bio-title">Gardener's Story:</h2>
                <p class="bio-text">{$user->bio}</p>

                {if $user->flower}
                    <q class="flower-quote">And I am also proud of my {$user->flower->flowerName} üåª</q>
                {/if}
            </div>
        {/if}

        <div class="profile-info">
            <h2>Profile Information:</h2>
                <ul>
                    <li><strong>Email:</strong> {$user->email}</li>
                    <li><strong>GitHub Profile:</strong> <a class="github-link" href="{$user->profileUrl}" target="_blank"> üêô</a></li>
                    {if $user->location}
                        <li><strong>Location:</strong> {$user->location}</li>
                    {/if}
                </ul>
        </div>

    </div>
{/block}

