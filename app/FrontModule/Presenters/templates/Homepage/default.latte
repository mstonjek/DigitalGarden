    <style>
        body {
            background-color: #ddf6dd;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }

        .homepage-container {
            max-width: calc(100% - 30rem);
            margin: 2.5rem auto;
            padding: 3.5rem 5rem 2rem;
            background-color: #e5ffe5;
            background-image: url('https://www.transparenttextures.com/patterns/little-pluses.png');
            border-radius: 2.5rem;
            text-align: center;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.25);
            border: 0.4rem dashed #88bd8f;
        }

        .nav-links {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .about-us-link {
            text-decoration: none;
            color: #467341;
            display: inline-block;
            font-size: large;
            transition: transform 0.3s ease, filter 0.3s ease;
            filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.3));
        }

        .front-pages {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            gap: 2.5rem;
        }

        .login-link {
            border: 1px solid #004d40;
            padding: 0.75rem 2.5rem;
            font-size: 1rem;
            border-radius: 0.75rem;
            background-color: #e5ffe5;
            background-image: url('https://www.transparenttextures.com/patterns/soft-grid.png');
            color: #003d29;
            text-align: center;
            display: inline-block;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .login-link:hover {
            background-color: #467341;
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .about-us-link:hover {
            transform: scale(1.2);
            filter: brightness(1.2);
        }

        .titles {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .welcome-title {
            font-size: 2.5rem;
            margin: 1.5rem 0 0;
            color: #3d6e3d;
        }

        .plant-flower {
            font-size: 1.5rem;
            font-style: italic;
            color: #666;
            margin: 0;
        }

        .garden-info {
            font-weight: lighter;
            font-style: italic;
            font-size: large;
            color: #222;
            margin: 1.5rem 0 0;
        }

        .garden-preview {
            border: 0.2rem dashed #459f49;
            padding: 1rem;
            border-radius: 1rem;
            min-height: 45vh;
            background-color: #c0f5c5;
            text-align: center;
            margin: 2rem auto 0;
        }

        .garden-title {
            font-size: 1.2rem;
            color: #666;
            margin: 0.5rem 0;
            font-weight: lighter;
        }

        .flower {
            text-decoration: none;
            font-size: 1.2rem;
            transition: transform 0.3s ease, filter 0.3s ease;
            filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.3));
        }

        .flower:hover {
